    "axios": "^1.7.2",
    "express": "^4.19.2",
    "kysely-codegen": "^0.15.0",
    "path": "^0.12.7",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7",
    "better-sqlite3": "^11.1.2",
    "dotenv": "^16.4.5",
    "kysely": "^0.27.4"
  }
