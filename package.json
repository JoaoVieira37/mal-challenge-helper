  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JoaoVieira37/mal-challenge-helper/issues"
  },
  "homepage": "https://github.com/JoaoVieira37/mal-challenge-helper#readme",
  "scripts": {
    "codegen": "npx kysely-codegen",
    "build": "tsc && npm run build:cp-public",
    "build:cp-public": "cp ./public/** ./dist",
    "initdb": "cat test.sql | sqlite3 test.db",
    "start": "node dist/main.js",
    "exec": "npm run build && npm run initdb && npm run start",
    "run": "npm run build && npm run start",
    "type": "tsc --noEmit",
    "web": "node dist/webserver.js"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
